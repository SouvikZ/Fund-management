# Database Configuration
# Copy this file to .env and update with your actual values

DB_SERVER=localhost\SQLEXPRESS
# If using a named instance (like SQLEXPRESS), use: localhost\SQLEXPRESS
# For default instance, use: localhost
# Alternative: Use DB_INSTANCE instead (see below)

# DB_INSTANCE=SQLEXPRESS
# Optional: Specify instance name separately (alternative to DB_SERVER=localhost\SQLEXPRESS)

USE_WINDOWS_AUTH=true
# Set to true for Windows Authentication (Trusted Connection)
# Set to false and provide DB_USER/DB_PASSWORD for SQL Server Authentication

# For SQL Server Authentication (when USE_WINDOWS_AUTH=false):
# DB_USER=sa
# DB_PASSWORD=YourPassword123

DB_NAME=FinancialTracker
# Database name (will be created automatically if it doesn't exist)

DB_ENCRYPT=true
# Set to true to enable encryption (matches SSMS default)
# Set to false only if you have encryption issues

# Server Configuration
PORT=5000
# Change if port 5000 is already in use

