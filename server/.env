# ================================
# Database Configuration
# ================================

# Server name:
# - For default instance: localhost
# - For named instance (like SQLEXPRESS): localhost\SQLEXPRESS
DB_SERVER=localhost\SQLEXPRESS

# Alternative: specify instance separately
# DB_INSTANCE=SQLEXPRESS

# Choose authentication mode:
# - true  = Windows Authentication (Trusted Connection)
# - false = SQL Server Authentication (requires DB_USER + DB_PASSWORD)
USE_WINDOWS_AUTH=false

# SQL Server Authentication credentials (only used when USE_WINDOWS_AUTH=false)
DB_USER=sa
DB_PASSWORD=YourPassword123

# Database name (will be created automatically if it doesn't exist)
DB_NAME=FinancialTracker

# Encryption settings:
# - true  = enable encryption (recommended, matches SSMS default)
# - false = disable encryption (use only if you face local dev issues)
DB_ENCRYPT=false

# ================================
# Server Configuration
# ================================
PORT=5000
